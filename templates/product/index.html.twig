{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Nos produits{% endblock %}

{% block content %}
    <div class="mt-5">
        <div class="row">
            <div class="col-md-3">
                <h2>Fitrer :</h2>
                {{ form(form) }}
            </div>
            <div class="col-md-9">
                <h1>Nos produits</h1>
                <div class="row products-container">
                    {% for product in products %}
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="product-item">
                                <a href="{{ path('product', {slug: product.slug}) }}">
                                    <img src="/uploads/{{ product.thumbnail }}" alt="{{ product.name }}" class="img-fluid">
                                </a>
                                <h5>{{ product.name }}</h5>
                                <div class="product-subtitle">{{ product.subtitle }}</div>
                                <div class="product-price">{{ (product.price / 100) | number_format(2,      ',', '.') }}â‚¬</div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
